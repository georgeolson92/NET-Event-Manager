@{
    ViewData["Title"] = "Event Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EventManager.Models.Venue

@if (User.Identity.IsAuthenticated)
{
    <h2>Create a Venue</h2>
    <hr />
    <h4>Add a new venue</h4>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

        <input type="submit" value="Add new venue" class="btn btn-primary"/>
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
}
else
{
    <h3>Please @Html.ActionLink("Log in", "Login", "Account") or @Html.ActionLink("Register", "Register", "Account") before creating a new Venue.</h3>
}