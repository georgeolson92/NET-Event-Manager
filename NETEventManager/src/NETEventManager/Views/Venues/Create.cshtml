@{
    ViewData["Title"] = "Event Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EventManager.Models.Venue

@if (User.Identity.IsAuthenticated)
{
    <h2>Create a Venue</h2>
    <hr />
    <h4>Add a new venue</h4>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })

        @Html.LabelFor(model => model.ImageURL)
        @Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control" })

        <div class="row">
            <div class="col-md-5">
                <p>Address:</p>
                <input name="address" class="form-control" />
            </div>
            <div class="col-md-3">
                <p>City:</p>
                <input name="city" class="form-control" />
            </div>
            <div class="col-md-1">
                <p>State:</p>
                <input name="state" class="form-control" />
            </div>
            <div class="col-md-2">
                <p>Country:</p>
                <input name="country" class="form-control" />
            </div>
            <div class="col-md-1">
                <p>ZIP Code:</p>
                <input name="postalCode" class="form-control" />
            </div>
           </div>


        <input type="submit" value="Add new venue" class="btn btn-primary"/>
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
}
else
{
    <h3>Please @Html.ActionLink("Log in", "Login", "Account") or @Html.ActionLink("Register", "Register", "Account") before creating a new Venue.</h3>
}